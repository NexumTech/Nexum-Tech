@model NexumTech.Infra.Models.CompanyViewModel

@using Microsoft.AspNetCore.Mvc.Localization;

@inject IViewLocalizer Localizer

<link href="~/lib/bootstrap/css/bootstrap.css" rel="stylesheet" />
<link href="~/lib/font-awesome/css/all.css" rel="stylesheet" />
<link href="~/css/Company.css" rel="stylesheet" />

@if (ViewBag.CurrentTheme == "dark")
{
    <link id="sweetalert-css" href="~/lib/sweetalert2/sweetalert2-dark.css" rel="stylesheet" />
}
else
{
    <link id="sweetalert-css" href="~/lib/sweetalert2/sweetalert2.css" rel="stylesheet" />
}

<script src="~/lib/sweetalert2/sweetalert2.js"></script>
<script src="~/lib/jquery/jquery.js"></script>
<script src="~/js/ThemeSwitcher.js"></script>
<script src="~/js/Company.js"></script>

<body data-bs-theme="light">
    <!-- SweetAlert resources -->
    <span class="d-none" id="lblAreYouSure">@Localizer["AreYouSure"]</span>
    <span class="d-none" id="lblUndoAction">@Localizer["UndoAction"]</span>
    <span class="d-none" id="lblYes">@Localizer["Yes"]</span>
    <span class="d-none" id="lblCancel">@Localizer["Cancel"]</span>
    <!-- SweetAlert resources -->

    <div class="container">
        @if (Model != null)
        {
            @Html.Hidden("hasCompany", "true", new { @id = "hasCompany" })
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    @Localizer["Company"]
                    <i class="fa-solid fa-pencil" title="@Localizer["EditCompany"]" style="cursor: pointer" id="btnEditCompanyName" data-bs-toggle="modal" data-bs-target="#companyModal"></i>
                </div>
                <div class="card-body py-4">
                    <div>
                        <div class="row g-0">
                            <div class="col-md-4 rounded left-box" style="background-image:url(@Model.Base64Logo); background-size: cover; background-position: center;">
                            </div>
                            <div class="col-md-8">
                                <div class="card-body">
                                    <h5 class="card-title mt-3">@Model.Name</h5>
                                    <p class="mt-3"><b>@Localizer["Description"]:</b></p>
                                    <p class="card-text" style="text-align: justify;">@Model.Description</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer d-flex justify-content-end">
                    <button class="btn btn-outline-danger" id="btnCloseCompany" title="@Localizer["CloseCompany"]">
                        <i class="fa-solid fa-door-open"></i>
                    </button>
                    <a href="/Employees?companyId=@Model.Id" class="btn btn-outline-secondary mx-2" title="@Localizer["Employees"]">
                        <i class="fa-solid fa-people-group"></i>
                    </a>
                    <a href="/Devices?companyId=@Model.Id" class="btn btn-outline-info" title="@Localizer["Devices"]">
                        <i class="fa-solid fa-mobile-screen"></i>
                    </a>
                </div>
            </div>
        }
        else
        {
            @Html.Hidden("hasCompany", "false", new { @id = "hasCompany" })
            <div class="card">
                <div class="card-header">
                    @Localizer["Company"]
                </div>
                <div class="card-body py-4">
                    <h5 class="card-title">
                        @Localizer["DontHaveCompany"]
                    </h5>
                </div>
                <div class="d-flex justify-content-center align-items-center">
                    <button class="btn btn-outline-success btn-lg w-100 h-100" data-bs-toggle="modal" data-bs-target="#companyModal">
                        <i class="fa-solid fa-plus"></i>
                        @Localizer["Create"]
                    </button>
                </div>
            </div>
        }

        <div class="modal fade" id="companyModal" tabindex="-1" aria-labelledby="companyModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable modal-xl" id="companyModalContent">
            </div>
        </div>
    </div>
</body>


