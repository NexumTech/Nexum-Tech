<link href="~/lib/bootstrap/css/bootstrap.css" rel="stylesheet" />
<link href="~/lib/font-awesome/css/all.css" rel="stylesheet" />

<script src="~/lib/jquery/jquery.js"></script>
<script src="~/js/ThemeSwitcher.js"></script>
<script src="~/js/Company.js"></script>

<body data-bs-theme="light">
    <div class="container">
        @if (ViewBag.UserHasCompany == true)
        {
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    Company
                    <i class="fa-solid fa-pencil" style="cursor: pointer" id="btnEditCompanyName" data-bs-toggle="modal" data-bs-target="#companyModal"></i>
                </div>
                <div class="card-body py-4">
                    <div>
                        <div class="row g-0">
                            <div class="col-md-4">
                                <img src="https://img.freepik.com/free-photo/painting-mountain-lake-with-mountain-background_188544-9126.jpg" class="img-fluid rounded">
                            </div>
                            <div class="col-md-8">
                                <div class="card-body">
                                    <h5 class="card-title mt-3">Your company</h5>
                                    <p class="mt-3"><b>Description:</b></p>
                                    <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer d-flex justify-content-end">
                    <button class="btn btn-outline-danger">
                        <i class="fa-solid fa-door-open"></i>
                    </button>
                    <a href="/Employees" class="btn btn-outline-secondary mx-2">
                        <i class="fa-solid fa-people-group"></i>
                    </a>
                    <a href="/Devices" class="btn btn-outline-info">
                        <i class="fa-solid fa-mobile-screen"></i>
                    </a>
                </div>
            </div>
        }
        else
        {
            <div class="card">
                <div class="card-header">
                    Company
                </div>
                <div class="card-body py-4">
                    <h5 class="card-title">
                        You don´t have any company registered yet.
                    </h5>
                </div>
                <div class="d-flex justify-content-center align-items-center">
                    <button class="btn btn-outline-success btn-lg w-100 h-100" data-bs-toggle="modal" data-bs-target="#companyModal">
                        <i class="fa-solid fa-plus"></i>
                        Create
                    </button>
                </div>
            </div>
        }

        <div class="modal fade" id="companyModal" tabindex="-1" aria-labelledby="companyModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable modal-xl" id="companyModalContent">
            </div>
        </div>
    </div>
</body>


