<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="Chrome">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="~/css/_Layout.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/css/bootstrap.css" rel="stylesheet" />
    <link href="~/lib/font-awesome/css/all.css" rel="stylesheet" />

    <title>Nexum</title>
</head>

<script src="~/lib/popper.js/umd/popper.js"></script>
<script src="~/lib/bootstrap/js/bootstrap.js"></script>
<script src="~/lib/jquery/jquery.js"></script>
<script src="~/js/ThemeSwitcher.js"></script>
<script src="~/js/_Layout.js"></script>

<body>
    <div class="spinner-wrapper" id="loadingSpinner" style="display: none;">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>
    <header>
        <nav class="navbar navbar-light">
            <div class="container-fluid justify-content-start">
                <button class="btn" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasExample" aria-controls="offcanvasExample">
                    <i class="fa-solid fa-bars fa-lg"></i>
                </button>
            </div>
        </nav>
    </header>

    <div class="offcanvas offcanvas-start d-flex flex-column flex-shrink-0 p-3" tabindex="-1" id="offcanvasExample" aria-labelledby="offcanvasExampleLabel" style="width: 280px;">
        <button class="btn w-100 d-flex align-items-center mb-3 mb-md-0 me-md-auto" type="button">
            <img src="~/images/n_shortcut_icon.png" alt="" width="50" height="50" class="rounded-circle me-4">
            <span class="fs-4">Nexum</span>
        </button>
        <hr>
        <ul class="nav nav-pills flex-column mb-auto mt-3">
            <li class="nav-item mb-4">
                <a href="/Home" class="btn w-100 rounded text-start fs-5">
                    <i class="fa-solid fa-house-chimney"></i>
                    Home
                </a>
            </li>
            <li class="nav-item mb-4">
                <a href="/Home" class="btn w-100 rounded text-start fs-5">
                    <i class="fa-solid fa-chart-line"></i>
                    Real Time Monitoring 
                </a>
            </li>
            <li class="nav-item mb-4">
                <a href="/Home" class="btn w-100 rounded text-start fs-5">
                    <i class="fa-solid fa-chart-pie"></i>
                    History
                </a>
            </li>
            <li class="nav-item mb-4">
                <a href="/Home" class="btn w-100 rounded text-start fs-5">
                    <i class="fa-solid fa-building"></i>
                    Companies
                </a>
            </li>
            <li class="nav-item mb-4">
                <a href="/Home" class="btn w-100 rounded text-start fs-5">
                    <i class="fa-solid fa-people-group"></i>
                    Users
                </a>
            </li>
        </ul>
        <hr>
        <div class="dropdown">
            <button class="btn d-flex align-items-center text-decoration-none fs-6 dropdown-toggle" type="button" id="dropdownUser" data-bs-toggle="dropdown" aria-expanded="false">
                <img src="https://via.placeholder.com/150x150/3b2d50/bdbac1?text=DAVIDSONBPE" width="32" height="32" class="rounded-circle me-2">
                <strong>User</strong>
            </button>
            <ul class="dropdown-menu text-small shadow" aria-labelledby="dropdownUser">
                <li>
                    <div class="form-check form-switch mx-3">
                        <input class="form-check-input"
                               type="checkbox"
                               id="SwitchTheme" />
                        <label class="form-check-label" for="SwitchTheme">
                            <i class="fa-regular fa-sun"></i>
                        </label>
                    </div>
                </li>
                <li>
                    <a class="dropdown-item" href="#">
                        <i class="fa-solid fa-user"></i>
                        Profile
                    </a>
                </li>
                <li>
                    <hr class="dropdown-divider">
                </li>
                <li>
                    <a class="dropdown-item" href="#">
                        <i class="fa-solid fa-arrow-right-from-bracket"></i>
                        Sign out
                    </a>
                </li>
            </ul>
        </div>

    </div>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

<script>
</script>