@using Microsoft.AspNetCore.Mvc.Localization;

@inject IViewLocalizer Localizer

<link href="~/lib/bootstrap/css/bootstrap.css" rel="stylesheet" />
<link href="~/lib/font-awesome/css/all.css" rel="stylesheet" />
<link href="~/lib/animate.css/animate.css" rel="stylesheet" />

<script src="~/lib/jquery/jquery.js"></script>
<script src="~/js/ThemeSwitcher.js"></script>

<body data-bs-theme="light">
    <div class="container col-xxl-8 px-4 py-5 animate__animated  animate__fadeInUp animate__slower">
        <div class="row flex-lg-row-reverse align-items-center g-5 py-5">
            <div class="col-10 col-sm-8 col-lg-6 animate__animated animate__pulse animate__infinite animate__slower">
                <img src="~/images/Illustration.png" class="d-block mx-lg-auto img-fluid">
            </div>
            <div class="col-lg-6 text-justify">
                <h1 class="display-5 fw-bold lh-1 mb-3">@Localizer["Welcome"] @ViewBag.Username</h1>
                <p class="lead mt-4">@Localizer["StartToMonitor"]</p>
                <div class="d-grid gap-2 mt-4 d-md-flex justify-content-md-start">
                    <a href="/RealTimeChart" class="btn btn-outline-primary btn-lg px-4 me-md-2">
                        <i class="fa-solid fa-chart-line fa-xs"></i>
                        @Localizer["Monitor"]
                    </a>
                </div>
            </div>
        </div>
    </div>
</body>

